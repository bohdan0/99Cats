<h1>Add a cat!</h1>

<form action="/cats" method="post">
  <table>
    <tr>
      <td><label for="name">Name</label></td>
      <td><input id="name" type="text" name="cat[name]"></td>
    </tr>
    <tr>
      <td><label for="birth">Birth Date</label></td>
      <td><input id="birth" type="date" name="cat[birth_date]"></td>
    </tr>
    <tr>
      <td><label for="color">Color</label></td>
      <td>
        <select id="color" name="cat[color]">
          <option disabled selected>--Please choose a color--</option>
          <option value="black">Black</option>
          <option value="white">White</option>
          <option value="red">Red</option>
          <option value="green">Green</option>
        </select>
      </td>
    </tr>
    <tr>
      <td><label for="sex">Sex</label></td>
      <td>
        <input id="sex" type="radio" name="cat[sex]" value="M">M<br>
        <input id="sex" type="radio" name="cat[sex]" value="F">F
      </td>
    </tr>
    <tr>
      <td><label for="description">Description</label></td>
      <td><textarea id="description" name="cat[description]" rows="8" cols="30"></textarea></td>
    </tr>
  </table>

  <input type="submit" value="Add cat">

</form>
